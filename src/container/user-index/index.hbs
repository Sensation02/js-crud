<main class='main'>
  <section>
    <div class='form'>
      <h1 class='form__title'>Create User</h1>
      <form method='POST' action='/user-create'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='email' class='form__label'>Email:
            </label>
            <input
              type='email'
              class='form__input'
              name='email'
            />
          </div>
          <div class='form__field'>
            <label for='login' class='form__label'>Nickname:
            </label>
            <input
              type='login'
              class='form__input'
              name='login'
            />
          </div>
          <div class='form__field'>
            <label
              for='password'
              class='form__label'
            >Password:
            </label>
            <input
              type='password'
              class='form__input'
              name='password'
            />
          </div>
          <button class='form__button'>Submit</button>
        </div>
      </form>
    </div>
  </section>
  <section>
    <div class='form'>
      <h1 class='form__title'>Users</h1>
      <div class='user-list'>
        {{#with data.users}}
          {{#if isEmpty}}
            <mark>No users</mark>
          {{else}}
            <ul>
              {{#each list}}
                <li>{{login}}
                  \\
                  {{email}}
                  \\
                  {{id}}
                  -
                  <a
                    href='/user-delete?id={{id}}'
                  >(Delete)</a></li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>
  <section>
    <div class='form'>
      <h1 class='form__title'>Change users email</h1>
      <form method='POST' action='/user-update'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='ID' class='form__label'>ID:</label>
            <input
              type='ID'
              class='form__input'
              name='ID'
            />
          </div>
          <div class='form__field'>
            <label for='email' class='form__label'>New
              Email:</label>
            <input
              type='email'
              class='form__input'
              name='email'
            />
          </div>
          <div class='form__field'>
            <label
              for='password'
              class='form__label'
            >Password:</label>
            <input
              type='password'
              class='form__input'
              name='password'
            />
          </div>
          <button class='form__button'>Submit</button>
        </div>
      </form>
    </div>
  </section>
</main>